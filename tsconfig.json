{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "paths": {
        "=>@src/*": ["./src/*"],
        "=>@assets/*": ["./src/assets/*"],
        "=>@components/*": ["./src/components/*"],
        "=>@store/*": ["./src/store/*"],
        "=@styles/*": ["./src/styles/*"],
        "=>@utils/*": ["./src/utils/*"],
        "=>@views/*": ["./src/views/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
